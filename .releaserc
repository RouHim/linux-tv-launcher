{
  "branches": ["main"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "echo ${nextRelease.version} > .version && sed -i 's/^version = \".*\"/version = \"${nextRelease.version}\"/' Cargo.toml && cargo check"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [".version", "CHANGELOG.md", "Cargo.toml", "Cargo.lock"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "release-artifacts/linux-tv-launcher-x86_64",
            "label": "x86_64 Linux (musl)"
          },
          {
            "path": "release-artifacts/linux-tv-launcher-aarch64",
            "label": "ARM64 Linux (musl)"
          }
        ],
        "successComment": "ðŸŽ‰ This release has been published! Download the binaries for your platform:\n\n- **x86_64**: linux-tv-launcher-x86_64\n- **ARM64**: linux-tv-launcher-aarch64\n\nTo use with `self_update`, the app will automatically fetch and install the correct binary."
      }
    ]
  ]
}
